{
  "name": "m8t",
  "version": "0.4.0",
  "description": "A minimalist static site generator, and your best friend",
  "keywords": [
    "static site generator",
    "markdown",
    "react",
    "mdx",
    "html"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thegedge/m8t.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jason Gedge",
    "email": "jason@gedge.ca"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "bin": {
    "m8t": "./dist/cli/index.js"
  },
  "files": [
    "dist/**/*.{d.ts,js}",
    "LICENSE",
    "package.json",
    "README.md",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "lint": "npm run lint:prettier",
    "lint:prettier": "./scripts/prettier-with-diff",
    "prepublishOnly": "tsc",
    "tc": "tsc --noEmit",
    "test": "echo 'No tests yet'",
    "update": "ncu --interactive",
    "watch": "tsc --watch"
  },
  "overrides": {
    "@nodejs-loaders/tsx": {
      "esbuild": "0.25.5"
    }
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@nodejs-loaders/tsx": "^1.1.2",
    "ansi-escapes": "^7.0.0",
    "chalk": "^5.4.1",
    "debug": "^4.4.1",
    "esbuild": "^0.25.5",
    "html-validate": "^9.7.1",
    "inflected": "^2.1.0",
    "lodash-es": "^4.17.21",
    "mime-types": "^3.0.1",
    "p-debounce": "^4.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rehype-katex": "^7.0.1",
    "remark-definition-list": "^2.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-rehype": "^11.1.2"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/inflected": "^2.1.3",
    "@types/lodash-es": "^4.17.12",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.18",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "optionalDependencies": {
    "@tailwindcss/nesting": "*",
    "@tailwindcss/postcss": "*",
    "postcss-discard-comments": "*"
  }
}
